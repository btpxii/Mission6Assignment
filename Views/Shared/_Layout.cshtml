<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mission6Assignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">The Joel Hilton Film Collection</a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="MyPodcasts">My Podcasts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="EnterMovie">Add a Movie</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="ViewMovies">View Movies</a>
            </li>
        </ul>
    </nav>
    <div>
        <h1>@ViewData["Title"]</h1>
        @RenderBody()
    </div>
</body>
</html>
